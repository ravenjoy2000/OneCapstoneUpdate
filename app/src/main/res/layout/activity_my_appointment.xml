<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_my_appointment"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="@string/my_appointment_title"
        app:titleTextColor="@android:color/white"
        android:elevation="6dp" />

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Appointment Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_doctor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Maria Pineda"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        android:textColor="#222222" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: Confirmed"
                        android:textSize="20sp"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#E0E0E0" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date: Sept 25, 2025"
                        android:textSize="20sp"
                        android:textColor="#333333"
                        android:layout_marginTop="14dp" />

                    <TextView
                        android:id="@+id/tv_previous_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rescheduled from: Sept 20, 2025"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp"
                        android:layout_marginTop="6dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time: 3:00 PM"
                        android:textSize="20sp"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tv_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mode: Teleconsult"
                        android:textSize="20sp"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location: Pineda Medical Clinic"
                        android:textSize="20sp"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp" />

                    <!-- NEW: Service -->
                    <TextView
                        android:id="@+id/tv_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Service: General Consultation"
                        android:textSize="20sp"
                        android:textColor="#333333"
                        android:layout_marginTop="8dp" />

                    <!-- NEW: Price -->
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price: â‚±500"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:id="@+id/tv_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Note: Please bring your PhilHealth ID"
                        android:textSize="20sp"
                        android:textColor="#555555"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tv_appointment_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reason: Chest Pain"
                        android:textSize="20sp"
                        android:textColor="#D32F2F"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="32dp">

                <!-- Start Consultation Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_start_consultation"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Consultation"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    app:cornerRadius="18dp"
                    app:icon="@android:drawable/ic_menu_today"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    android:layout_marginBottom="16dp"
                    app:backgroundTint="@android:color/holo_blue_dark" />

                <!-- Cancel Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancel"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    app:cornerRadius="18dp"
                    app:icon="@android:drawable/ic_menu_close_clear_cancel"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    android:layout_marginBottom="16dp"
                    app:backgroundTint="@android:color/holo_red_dark" />

                <!-- Reschedule Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reschedule"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reschedule"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    app:cornerRadius="18dp"
                    app:icon="@android:drawable/ic_menu_edit"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    android:layout_marginBottom="16dp"
                    app:backgroundTint="@android:color/holo_orange_dark" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
