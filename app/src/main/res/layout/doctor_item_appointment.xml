<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_appointment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/white">

    <!-- Parent container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Row for Checkbox + Patient Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/tv_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Date -->
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sept 19, 2025"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginTop="2dp" />

        <!-- Row for Time, Status, Mode -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- Time -->
            <TextView
                android:id="@+id/doctor_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:00 PM"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="6dp" />

            <!-- Separator -->
            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_marginHorizontal="12dp"
                android:background="@color/gray" />

            <!-- Status -->
            <TextView
                android:id="@+id/doctor_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete"
                android:textSize="14sp"
                android:textColor="@color/green"
                android:drawableLeft="@drawable/ic_status"
                android:drawablePadding="6dp" />

            <!-- Separator -->
            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_marginHorizontal="12dp"
                android:background="@color/gray" />

            <!-- Mode -->
            <TextView
                android:id="@+id/tv_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In-Person"
                android:textSize="14sp"
                android:textColor="@color/orange"
                android:drawableLeft="@drawable/ic_video"
                android:drawablePadding="6dp" />
        </LinearLayout>

        <!-- Cancellation Reason -->
        <TextView
            android:id="@+id/tv_cancellation_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="italic"
            android:visibility="gone"
            android:text="Reason: Sample reason" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
