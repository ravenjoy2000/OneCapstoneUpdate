<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_appointment_card"
    android:layout_marginBottom="12dp"
    android:elevation="4dp"
    android:clipToPadding="false"
    android:layout_marginHorizontal="8dp">


    <TextView
        android:id="@+id/tv_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Name"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/doctor_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-08-11"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/doctor_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:00 pm"
        android:textSize="14sp"/>
    <!-- Status -->
    <TextView
        android:id="@+id/doctor_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In-Person"
        android:textSize="14sp"
        android:textColor="@color/purple_5001"
        android:background="@drawable/bg_status"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:layout_marginTop="4dp"
        android:layout_gravity="start" />
</LinearLayout>
