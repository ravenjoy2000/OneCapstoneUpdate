<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Patient & Doctor -->
    <TextView
        android:id="@+id/tvPatientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient: John Doe"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#212121" />

    <TextView
        android:id="@+id/tvDoctorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor: Dr. Smith"
        android:textSize="14sp"
        android:textColor="#555" />

    <!-- Appointment Date & Status -->
    <TextView
        android:id="@+id/tvAppointmentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: Jan 1, 2025"
        android:textSize="14sp"
        android:textColor="#555" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Completed"
        android:textSize="14sp"
        android:textColor="#2E7D32" />

    <!-- Diagnosis & Notes -->
    <TextView
        android:id="@+id/tvDiagnosis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diagnosis: Common Cold"
        android:textSize="14sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tvDoctorNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor Notes: Take medicine twice daily."
        android:textSize="14sp"
        android:textColor="#000" />

    <!-- Download PDF Button -->
    <Button
        android:id="@+id/btnDownloadPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download PDF"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white" />
</LinearLayout>
