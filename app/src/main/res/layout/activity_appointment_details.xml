<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?android:colorBackground"
    tools:context=".doctor.AppointmentDetailsActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_patient_feedback"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        app:title="Teleconsultation Details"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ScrollView wrapping all content below toolbar -->
    <ScrollView
        android:id="@+id/scrollMedicalLog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_patient_feedback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Patient Profile Picture -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="6dp">

                <ImageView
                    android:id="@+id/iv_patient_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user_place_holder"
                    android:contentDescription="Patient Profile Picture" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Patient Name -->
            <TextView
                android:id="@+id/tv_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Juan Dela Cruz"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:layout_marginBottom="8dp" />

            <!-- Appointment Status -->
            <TextView
                android:id="@+id/tv_appointment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Status: Confirmed"
                android:textSize="16sp"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginBottom="8dp" />

            <!-- Appointment Date and Time -->
            <TextView
                android:id="@+id/tv_appointment_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Date: August 10, 2025\nTime: 3:00 PM"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Consultation Type -->
            <TextView
                android:id="@+id/tv_consultation_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Consultation Mode: Teleconsultation"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginBottom="8dp" />


            <!-- Patient Government / PhilHealth ID Label -->
            <TextView
                android:id="@+id/tv_patient_gov_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="PhilHealth / Government ID"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <!-- Patient Government / PhilHealth ID Image -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/iv_patient_gov_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cuteperson"
                    android:contentDescription="Government/PhilHealth ID" />
            </com.google.android.material.card.MaterialCardView>




            <!-- Start Teleconsultation Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_consultation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Teleconsultation"
                android:textColor="@android:color/white"
                app:backgroundTint="?attr/colorPrimary"
                android:layout_marginBottom="24dp" />

            <!-- Post-Consultation Notice -->
            <TextView
                android:id="@+id/tv_follow_up_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write a medical log in here ."
                android:textSize="14sp"
                android:textColor="@color/green"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Medical Log Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Consultaion"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDiagnosis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="2"
                            android:maxLines="4" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Doctor Notes"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDoctorNotes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="4"
                            android:maxLines="6" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Upload File Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUploadFile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload PDF or Image"
                        android:textAllCaps="false"
                        app:backgroundTint="@color/purple_5001"
                        android:textColor="@android:color/white"
                        android:padding="12dp"
                        android:elevation="4dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Selected File Name -->
                    <TextView
                        android:id="@+id/tvSelectedFile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No file selected"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp"
                        android:padding="8dp"
                        android:background="@drawable/bg_card_rounded"
                        android:layout_marginBottom="24dp"
                        android:ellipsize="end"
                        android:maxLines="1" />

                    <!-- Save Medical Log Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save Medical Log"
                        android:textAllCaps="false"
                        app:backgroundTint="@color/purple_700"
                        android:textColor="@android:color/white"
                        android:padding="12dp"
                        android:elevation="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Appointment Outcome Selection -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        android:layout_marginBottom="16dp"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_appointment_outcome_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mark Appointment Outcome"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/green"
                                android:layout_marginBottom="8dp" />

                            <RadioGroup
                                android:id="@+id/rgAppointmentOutcome"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/rbComplete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Complete" />

                                <RadioButton
                                    android:id="@+id/rbLate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Late" />

                                <RadioButton
                                    android:id="@+id/rbNoShow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No Show" />

                                <RadioButton
                                    android:id="@+id/rbCancel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cancel" />

                            </RadioGroup>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_complete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Done"
                        android:textColor="@color/background_light"
                        app:backgroundTint="@color/green"
                        android:layout_marginBottom="12dp" />


                    <!-- More Options Label -->
                    <TextView
                        android:id="@+id/tv_doctor_more_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="More Options"
                        android:textSize="14sp"
                        android:textColor="@color/facebookBlue"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />


                    <!-- Reschedule Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_reschedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reschedule"
                        android:textColor="@color/background_light"
                        app:backgroundTint="@color/secondary_text_color"
                        android:layout_marginBottom="12dp" />




                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
