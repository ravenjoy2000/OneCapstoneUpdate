<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg2"
    tools:context=".doctor.AppointmentDetailsActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_patient_feedback"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        app:title="Teleconsultation Details"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollMedicalLog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/toolbar_patient_feedback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Patient Profile Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#E8F4FD"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center_horizontal">

                    <!-- Patient Profile Image Container -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="60dp"
                            app:cardElevation="8dp">

                            <ImageView
                                android:id="@+id/iv_patient_profile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_user_place_holder"
                                android:contentDescription="Patient Profile Picture" />
                        </com.google.android.material.card.MaterialCardView>
                    </FrameLayout>

                    <!-- Patient Name -->
                    <TextView
                        android:id="@+id/tv_patient_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:text="Patient Name"
                        android:textColor="#4CAF50"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <!-- Status Chip -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_appointment_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ“ Confirmed"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:chipBackgroundColor="#4CAF50"
                        app:chipCornerRadius="20dp"
                        app:chipStartPadding="16dp"
                        app:chipEndPadding="16dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Enhanced Info Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Date and Time Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ“… DATE"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:textStyle="bold"
                                    android:letterSpacing="0.1" />

                                <TextView
                                    android:id="@+id/tv_appointment_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="18sp"
                                    android:textColor="#1A1A1A"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ•’ TIME"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:textStyle="bold"
                                    android:letterSpacing="0.1" />

                                <TextView
                                    android:id="@+id/tv_appointment_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="18sp"
                                    android:textColor="#1A1A1A"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Consultation Mode -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’» CONSULTATION MODE"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:textStyle="bold"
                                android:letterSpacing="0.1" />

                            <TextView
                                android:id="@+id/tv_consultation_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Teleconsultation"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#2196F3"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- PhilHealth ID Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center_horizontal">

                    <!-- Section Header -->
                    <TextView
                        android:id="@+id/tv_patient_gov_id_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ†” PhilHealth / Government ID"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp" />

                    <!-- ID Image -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="220dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp">

                        <ImageView
                            android:id="@+id/iv_patient_gov_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="#F5F5F5"
                            android:contentDescription="Government/PhilHealth ID" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Start Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_consultation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Start Teleconsultation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:backgroundTint="?attr/colorPrimary"
                app:cornerRadius="28dp"
                android:elevation="6dp"
                app:rippleColor="#BBDEFB"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reschedule"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Reschedule Appointment"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:backgroundTint="#FF9800"
                app:cornerRadius="28dp"
                android:elevation="6dp"
                app:rippleColor="#FFE0B2"
                android:layout_marginBottom="24dp" />


            <!-- Follow-up Note -->
            <TextView
                android:id="@+id/tv_follow_up_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write a medical log in here."
                android:textSize="18sp"
                android:textColor="#4CAF50"
                android:gravity="center"
                android:layout_marginBottom="28dp" />


            <!-- Medical Log Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="12dp"
                app:cardCornerRadius="20dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Consultation Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Consultation"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDiagnosis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:inputType="textMultiLine"
                            android:minLines="2"
                            android:maxLines="4"
                            android:gravity="top|start" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Doctor Notes Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Doctor Notes"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorPrimary"
                        android:layout_marginBottom="28dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDoctorNotes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:inputType="textMultiLine"
                            android:minLines="4"
                            android:maxLines="6"
                            android:gravity="top|start" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Upload File Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUploadFile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload PDF or Image"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        app:backgroundTint="#9C27B0"
                        app:cornerRadius="24dp"
                        android:textColor="@android:color/white"
                        android:padding="14dp"
                        android:elevation="4dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Selected File Display -->
                    <TextView
                        android:id="@+id/tvSelectedFile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No file selected"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:background="@drawable/bg_card_rounded"
                        android:layout_marginBottom="28dp"
                        android:ellipsize="end"
                        android:maxLines="1" />

                    <!-- Save Medical Log Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save Medical Log"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        app:cornerRadius="24dp"
                        app:backgroundTint="#673AB7"
                        android:textColor="@android:color/white"
                        android:padding="14dp"
                        android:elevation="4dp"
                        android:layout_marginBottom="28dp" />

                    <!-- Appointment Outcome Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="#F8FFF8"
                        app:strokeColor="#4CAF50"
                        app:strokeWidth="2dp"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <!-- Outcome Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="16dp">

                                <TextView
                                    android:id="@+id/tv_appointment_outcome_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mark Appointment Outcome"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="@android:color/black" />

                            </LinearLayout>

                            <!-- Radio Group for Outcome -->
                            <RadioGroup
                                android:id="@+id/rgAppointmentOutcome"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/rbComplete"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Complete"
                                    android:textSize="16sp"
                                    android:textColor="#1A1A1A"
                                    android:padding="8dp"
                                    android:layout_marginBottom="8dp"
                                    app:buttonTint="#4CAF50" />

                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:id="@+id/rbNoShow"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="No Show"
                                    android:textSize="16sp"
                                    android:textColor="#1A1A1A"
                                    android:padding="8dp"
                                    app:buttonTint="#4CAF50" />

                            </RadioGroup>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Done Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_complete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Done"
                        android:textSize="18sp"
                        app:cornerRadius="20dp"
                        android:textColor="@android:color/white"
                        app:backgroundTint="#4CAF50"
                        android:layout_marginBottom="16dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>