<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/background_light"
        tools:context=".patient.MedicationLogActivity">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Your Medications"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium" />

        <!-- Container for multiple drug entries -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Medication Entry"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#424242"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <LinearLayout
                    android:id="@+id/medicationContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Add New Drug Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddDrug"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âž• Add New Drug"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp"
                    android:padding="16dp"
                    app:backgroundTint="@color/teal_700"
                    app:cornerRadius="20dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />

                <!-- Save All Medications Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveMedication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¾ Save All Medications"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:padding="16dp"
                    app:backgroundTint="@color/purple_500"
                    app:cornerRadius="20dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp" />

        <!-- Saved Medications Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Saved Medications Title -->
                <TextView
                    android:id="@+id/tvSavedMedications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saved Medications"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- RecyclerView to display saved meds -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerSavedMedications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="8dp"
                    android:nestedScrollingEnabled="false" />

                <!-- Empty State Message (Initially hidden) -->
                <TextView
                    android:id="@+id/tvEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No medications saved yet.\nAdd your first medication above."
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:padding="20dp"
                    android:background="#f5f5f5"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Instructions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#e8f5e8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Tips for Medication Logging"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#2e7d32"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Include exact dosages (e.g., 500mg, 2 tablets)\nâ€¢ Specify timing instructions clearly\nâ€¢ Add important notes about food interactions\nâ€¢ Keep your medication list updated\nâ€¢ Share this list with your Doctor"
                    android:textSize="14sp"
                    android:textColor="#388e3c"
                    android:lineSpacingExtra="4dp"
                    android:paddingStart="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>