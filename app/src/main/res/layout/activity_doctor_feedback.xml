<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg2"
    tools:context=".doctor.DoctorFeedback">

    <!-- Toolbar  -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_patient_feedback"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_700"
        android:elevation="8dp"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="@string/doctor_feedback_title"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Ratings Summary Card  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRatingsSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:clipToPadding="false"
        android:elevation="8dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbar_patient_feedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutRatingsSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Enhanced Average Rating Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textAverageRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Average Rating: --"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_700" />

                    <RatingBar
                        android:id="@+id/ratingBarAverage"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        android:layout_marginTop="8dp"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textTotalFeedbacks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Feedbacks: --"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:paddingStart="12dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="6dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_300"
                android:layout_marginBottom="16dp" />

            <!-- Star Breakdown Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating Breakdown"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue_700"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle">

                <!-- 5★ Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="5★"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/blue_700" />

                    <ProgressBar
                        android:id="@+id/progress5"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/blue_700"
                        android:backgroundTint="@color/gray_300"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/label5"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:gravity="end" />
                </LinearLayout>

                <!-- 4★ Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="4★"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/blue_700" />

                    <ProgressBar
                        android:id="@+id/progress4"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/blue_700"
                        android:backgroundTint="@color/gray_300"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/label4"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:gravity="end" />
                </LinearLayout>

                <!-- 3★ Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="3★"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/blue_700" />

                    <ProgressBar
                        android:id="@+id/progress3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/blue_700"
                        android:backgroundTint="@color/gray_300"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/label3"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:gravity="end" />
                </LinearLayout>

                <!-- 2★ Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="2★"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/blue_700" />

                    <ProgressBar
                        android:id="@+id/progress2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/blue_700"
                        android:backgroundTint="@color/gray_300"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/label2"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:gravity="end" />
                </LinearLayout>

                <!-- 1★ Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="1★"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/blue_700" />

                    <ProgressBar
                        android:id="@+id/progress1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/blue_700"
                        android:backgroundTint="@color/gray_300"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/label1"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"
                        android:gravity="end" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Empty State Text -->
    <TextView
        android:id="@+id/tvEmptyFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No feedback yet"
        android:textColor="@color/gray_600"
        android:textSize="16sp"
        android:textStyle="italic"
        android:visibility="gone"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/cardRatingsSummary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recyclerViewFeedback" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFeedback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:fadeScrollbars="true"
        android:scrollbarStyle="outsideOverlay"
        android:overScrollMode="ifContentScrolls"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/cardRatingsSummary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>