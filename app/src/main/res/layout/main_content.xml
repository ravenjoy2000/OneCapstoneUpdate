<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fitsSystemWindows="true"
    android:paddingTop="72dp"
    tools:context=".patient.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Doctor Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:elevation="4dp"
            android:layout_margin="12dp"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_card_rounded">

            <!-- Doctor Icon -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_doctor_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/penidadoctor"
                android:layout_marginBottom="16dp"
                android:contentDescription="Doctor Photo" />

            <!-- Doctor Info -->
            <TextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👨‍⚕️ Name: Dr. Maria Pineda"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tv_doctor_specialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏥 Specialty: General Physician"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/tv_clinic_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🕑 Schedule: Mon, Wed, Fri\n2:00 PM – 6:00 PM"
                android:textSize="14sp"
                android:textColor="#388E3C"
                android:layout_marginBottom="10dp" />

            <!-- Contact -->
            <TextView
                android:id="@+id/tv_doctor_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📞 Phone: +63 912 345 6789"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_email_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✉️ Email: rpinedaclinic@gmail.com"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginBottom="12dp" />

            <!-- Facebook Button -->
            <Button
                android:id="@+id/btnVisitFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:text="Visit Facebook Page"
                android:textAllCaps="false"
                android:backgroundTint="@color/blue_700"
                android:textColor="@android:color/white"
                android:onClick="openClinicWebsite" />

            <!-- Address (Clickable) -->
            <TextView
                android:id="@+id/tv_doctor_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📍 Address:\n206 Paulette St., Josefa Subv.\nMalabanias, Angeles City, Pampanga 2009"
                android:textSize="14sp"
                android:textColor="#1E88E5"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp" />

        </LinearLayout>

        <!-- Appointment Section -->
        <TextView
            android:id="@+id/tv_appointment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅 Schedule Your Appointment"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1E88E5"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tv_appointment_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your preferred date and time below."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="20dp" />

        <!-- Book Button -->
        <Button
            android:id="@+id/btn_book_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:backgroundTint="#673AB7"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="32dp"
            android:paddingVertical="12dp" />

    </LinearLayout>
</ScrollView>
