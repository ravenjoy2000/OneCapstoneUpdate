<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".activities.MainActivity">

    <!-- Icon or Illustration (optional) -->
    <ImageView
        android:id="@+id/iv_intro_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cuteperson"
    android:layout_marginTop="40dp"
    android:contentDescription="Intro Icon" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule Your Appointment"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_below="@id/iv_intro_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_intro_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a date and time that works for you."
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_below="@id/tv_intro_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <!-- Book Now Button -->
    <Button
        android:id="@+id/btn_book_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Appointment"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_below="@id/tv_intro_subtitle"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
