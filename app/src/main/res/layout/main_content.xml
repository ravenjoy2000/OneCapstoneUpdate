<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F9FA"
    android:fitsSystemWindows="true"
    android:paddingTop="72dp"
    tools:context=".patient.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="72dp"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Card Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:elevation="4dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="#FFFFFF"
            android:clipToPadding="false"
            android:layout_gravity="center"
            android:backgroundTintMode="src_over"
            android:gravity="center_horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/bg_card_rounded" >

            <!-- Doctor Icon -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_doctor_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/penidadoctor"
                android:layout_marginBottom="16dp"
                android:contentDescription="Doctor Icon" />


            <!-- Doctor Name -->
            <TextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Juan Dela Cruz"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="4dp" />

            <!-- Specialty -->
            <TextView
                android:id="@+id/tv_doctor_specialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General Physician"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="8dp" />

            <!-- Clinic Schedule -->
            <TextView
                android:id="@+id/tv_clinic_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ•‘ Clinic Schedule: Monday, Wednesday, Friday\n2:00 PM â€“ 6:00 PM"
                android:textSize="14sp"
                android:textColor="#388E3C"
                android:layout_marginBottom="12dp" />

            <!-- Contact Info -->
            <TextView
                android:id="@+id/tv_doctor_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ž +63 912 345 6789"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_email_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ‰ï¸ rpinedaclinic@gmail.com"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginBottom="8dp" />

            <!-- Website Link -->
            <Button
                android:id="@+id/btnVisitFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="12dp"
                android:text="Visit Facebook Page"
                android:textAllCaps="false"
                android:backgroundTint="@color/facebookBlue"
                android:textColor="@android:color/white"
                android:onClick="openClinicWebsite" />







            <!-- Address -->
            <TextView
                android:id="@+id/tv_doctor_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ 206 Paulette St. Josefa Subv. Malabanias,\nAngeles City, Pampanga 2009"
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginBottom="16dp" />

            <!-- Map Image -->
            <ImageView
                android:id="@+id/img_map"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"
                android:src="@drawable/penediamap" />

        </LinearLayout>

        <!-- Appointment Info -->
        <TextView
            android:id="@+id/tv_appointment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Schedule Your Appointment"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1E88E5"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_appointment_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your preferred date and time."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <!-- Book Now Button -->
        <Button
            android:id="@+id/btn_book_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:backgroundTint="#1E88E5"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:paddingVertical="12dp"
            android:layout_marginHorizontal="24dp" />

    </LinearLayout>
</ScrollView>
