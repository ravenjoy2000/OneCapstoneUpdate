<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".doctor.DoctorDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Dr. Pineda!"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Appointments"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- No Appointments Placeholder (optional) -->
        <TextView
            android:id="@+id/tvNoAppointments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have no upcoming appointments."
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Appointment List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_current_appointments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="16dp"
            tools:listitem="@layout/doctor_item_appointment" />


    </LinearLayout>
</ScrollView>
