<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    tools:context=".patient.appointment">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- ✅ SwipeRefreshLayout wrapper -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Main Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Appointment Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appointment"
                    android:layout_marginBottom="24dp"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:paddingTop="12dp"
                    android:textColor="#222"
                    android:fontFamily="sans-serif-medium" />

                <!-- Doctor Info Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose Doctor"
                            android:layout_marginBottom="12dp"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#222"
                            android:fontFamily="sans-serif-medium" />

                        <Spinner
                            android:id="@+id/spinner_doctor"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginBottom="12dp"
                            android:padding="14dp"
                            android:textSize="16sp"
                            android:textColor="#333"
                            android:background="@drawable/spinner_background"
                            android:gravity="center_vertical" />

                        <!-- Doctor Details Container -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#f8f9fa"
                            android:padding="12dp"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/tv_doctor_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone: "
                                android:textSize="16sp"
                                android:textColor="#555"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tv_doctor_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email: "
                                android:textSize="16sp"
                                android:textColor="#555"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tv_doctor_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address: "
                                android:textSize="16sp"
                                android:textColor="#555" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- ✅ Services Offered Spinner -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Service:"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#222"
                            android:paddingBottom="12dp"
                            android:fontFamily="sans-serif-medium" />

                        <Spinner
                            android:id="@+id/spinner_services"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginBottom="12dp"
                            android:padding="14dp"
                            android:textSize="16sp"
                            android:background="@drawable/spinner_background"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/tv_service_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Price: ₱0"
                            android:textSize="16sp"
                            android:textColor="#555"
                            android:paddingTop="8dp"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Select Date -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <Button
                            android:id="@+id/btn_select_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FDD335"
                            android:text="Select Appointment Date"
                            android:textSize="16sp"
                            app:cornerRadius="20dp"
                            android:textColor="#333"
                            android:textStyle="bold"
                            android:padding="14dp"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tv_selected_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Selected Date: "
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:background="@color/gray"
                            android:padding="12dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- Appointment Mode -->
                <RadioGroup
                    android:id="@+id/rg_appointment_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <RadioButton
                        android:id="@+id/rb_in_person"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="In-person"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/rb_teleconsult"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Teleconsultation"
                        android:textSize="18sp" />
                </RadioGroup>

                <!-- Note -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#fff3cd">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reminders :"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#856404"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tv_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="6dp"
                            android:text="• Please bring your PhilHealth ID and previous records.\n• Arrive 10 minutes before your appointment.\n• Payments are non-refundable."
                            android:paddingStart="10dp"
                            android:textSize="16sp"
                            android:textColor="#856404" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Enhanced Time Slot List -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available Time Slots:"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#222"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="sans-serif-medium" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_time_slots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Enhanced Reason Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reason for Appointment:"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#222"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="sans-serif-medium" />

                        <EditText
                            android:id="@+id/et_reason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="E.g. General Checkup, Flu symptoms..."
                            android:minLines="3"
                            android:maxLines="5"
                            android:inputType="textMultiLine"
                            android:background="@android:drawable/edit_text"
                            android:padding="14dp"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Book Button -->
                <Button
                    android:id="@+id/btn_book_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book Appointment"
                    app:cornerRadius="20dp"
                    android:backgroundTint="#673AB7"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:layout_marginTop="20dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
