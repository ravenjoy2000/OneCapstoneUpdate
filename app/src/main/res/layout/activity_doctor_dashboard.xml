<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_doctor_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg2"
    tools:openDrawer="start">

    <!--  Main content container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <!--  Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_doctor_dashboard"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:elevation="8dp"
            app:title="Doctor Dashboard"
            app:titleTextColor="@android:color/white"
            app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

        <!-- Main dashboard content  -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Dashboard cards with card container -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <include layout="@layout/doctor_main_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>

    <!--  Navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_doctor_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_doctor_header_main"
        app:menu="@menu/activity_doctor_main_drawer"
        app:itemShapeFillColor="@color/white"
        app:itemTextAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:itemIconTint="?attr/colorPrimary"
        android:background="@android:color/white" />

</androidx.drawerlayout.widget.DrawerLayout>